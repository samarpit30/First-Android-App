<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="3dp">
        <ImageView
            android:id="@+id/myImageView1"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/myTextView1"
            android:layout_toRightOf="@+id/myImageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Product name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/myTextView2"
            android:layout_toRightOf="@+id/myImageView1"
            android:layout_below="@+id/myTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:text="Product Description"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/myTextView3"
            android:layout_toRightOf="@+id/myImageView1"
            android:layout_below="@+id/myTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:text="Bla Bla Bla Bla Bla Bla"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/myTextView4"
            android:layout_toRightOf="@+id/myImageView1"
            android:layout_below="@+id/myTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:text="Blah Blah Blah Blah Blah Blah"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>